<% layout('layouts/boilerplate.ejs') %>


<div class="container-fluid">
  <div></div>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-3">
      <% for (let list of allList) { %>
          <div class="col">
              <div class="card h-100 rounded-4 overflow-hidden">
                  <div class="img-wrapper">
                    <div id="card-info-btn">
                        <a href="/lists/<%= list._id %>" class="btn btn-danger text-center" style="width: 8rem;">More details</a>
                      </div>
                      <img src="<%= list.image.url %>" class="card-img-top img-fluid rounded-4" style="width: 100%; height: 300px;" alt="list-image">
                      
                  </div>
                  <div class="card-body d-flex align-items-center flex-column mb-0">
                      <p class="card-text"><strong><%= list.title %></strong> <br> 
                        &#8377; <%= Number(list.price).toLocaleString("en-IN") %> / Night
                      </p>
                      
                  </div>
              </div>
          </div>
      <% } %>
  </div>
</div>