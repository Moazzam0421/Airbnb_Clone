<% layout('layouts/boilerplate.ejs') %>

    <body>
        <div class="container mb-5">
            <h1 class="text-center mb-4">Post Details</h1>
    
            <div class="row gy-4 justify-content-center">
                <!-- Card Section -->
                <div class="col-12 col-md-8 col-lg-5">
                    <div class="card shadow-lg rounded-4 overflow-hidden">
                        <img src="<%= list.img %>" class="card-img-top img-fluid" alt="list-image">
                        <div class="card-body text-center">
                            <h4 class="card-title"><strong><%= list.title %></strong></h4>
                            <p class="card-text">
                                <span class="price">&#8377; <%= Number(list.price).toLocaleString("en-IN") %> / Night</span>
                            </p>
                        </div>
                    </div>
                </div>
    
                <!-- Details Section -->
                <div class="col-12 col-md-8 col-lg-7">
                    <div class="card p-4 rounded-4 shadow-lg">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Title:</strong> <%= list.title %></li>
                            <li class="list-group-item"><strong>Description:</strong> <%= list.description %></li>
                            <li class="list-group-item"><strong>Price:</strong> &#8377; <%= Number(list.price).toLocaleString("en-IN") %></li>
                            <li class="list-group-item"><strong>Location:</strong> <%= list.location %></li>
                            <li class="list-group-item"><strong>Country:</strong> <%= list.country %></li>
                            <li class="list-group-item"><strong>Image URL:</strong> <%= list.img %></li>
                        </ul>
                        <!-- Action Buttons -->
                        <div class="text-center mt-4 d-flex flex-column flex-md-row justify-content-around gap-2">
                            <a href="/lists/<%= list._id %>/edit" class="btn btn-dark">Edit</a>
                            <a href="/lists" class="btn btn-secondary">Back to List page</a>
                            <form action="/lists/<%= list._id %>?_method=DELETE" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>